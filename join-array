#!/usr/bin/env bash

set -euo pipefail

# Declare array
names=(bob jim alice mike sam)

# Join the `names` array using a space ( ) as the glue
echo "${names[*]}"

# Join the `names` array using a comma (,) as the glue
IFS=","
echo "${names[*]}"

# Join the `names` array using two dashes (--) as the glue
# Note that we have to use printf here because IFS can only be set to a single char
joined=$(printf "%s--" "${names[@]}")
echo "${joined:0:-2}"
